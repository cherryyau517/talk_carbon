<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Activities Logs

    <a data-toggle="collapse" href="#activity_type_activities_logs_new_form">
      Add activities log
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @activity_type.activities_logs.each do |activities_log| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to activities_log, activities_log %>

        <% if current_user == activities_log.user %>
          <%= link_to activities_log, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="activity_type_activities_logs_new_form">
        <%= render partial: "activity_types/activity_type_activities_logs_new_form" %>
      </div>
    </div>

  </ul>
</div>
