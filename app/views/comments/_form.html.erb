<% was_validated = comment.errors.any? %>

<%= form_with(model: comment, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for log_id start -->
  <div class="form-group">
    <% log_class = "form-control" %>
    <% log_was_invalid = comment.errors.include?(:log) %>

    <% if was_validated %>
      <% if log_was_invalid %>
        <% log_class << " is-invalid" %>
      <% else %>
        <% log_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :log_id %>
    <!-- Input for log_id start -->
    <%= f.collection_select :log_id, ActivitiesLog.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for log_id end -->
    <% if log_was_invalid %>
      <% comment.errors.full_messages_for(:log).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for log_id end -->
  <!-- Label and input for commenter_id start -->
  <div class="form-group">
    <% commenter_class = "form-control" %>
    <% commenter_was_invalid = comment.errors.include?(:commenter) %>

    <% if was_validated %>
      <% if commenter_was_invalid %>
        <% commenter_class << " is-invalid" %>
      <% else %>
        <% commenter_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :commenter_id %>
    <!-- Input for commenter_id start -->
    <%= f.collection_select :commenter_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for commenter_id end -->
    <% if commenter_was_invalid %>
      <% comment.errors.full_messages_for(:commenter).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for commenter_id end -->
  <!-- Label and input for comment start -->
  <div class="form-group">
    <% comment_class = "form-control" %>
    <% comment_was_invalid = comment.errors.include?(:comment) %>

    <% if was_validated %>
      <% if comment_was_invalid %>
        <% comment_class << " is-invalid" %>
      <% else %>
        <% comment_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :comment %>
    <!-- Input for comment start -->
    <%= f.text_area :comment, class: comment_class, placeholder: "Enter comment" %>
    <!-- Input for comment end -->
    <% if comment_was_invalid %>
      <% comment.errors.full_messages_for(:comment).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for comment end -->
  <!-- Label and input for date start -->
  <div class="form-group">
    <% date_class = "form-control" %>
    <% date_was_invalid = comment.errors.include?(:date) %>

    <% if was_validated %>
      <% if date_was_invalid %>
        <% date_class << " is-invalid" %>
      <% else %>
        <% date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :date %>
    <!-- Input for date start -->
    <%= f.date_select :date, class: date_class, placeholder: "Enter date" %>
    <!-- Input for date end -->
    <% if date_was_invalid %>
      <% comment.errors.full_messages_for(:date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for date end -->
  <!-- Label and input for time start -->
  <div class="form-group">
    <% time_class = "form-control" %>
    <% time_was_invalid = comment.errors.include?(:time) %>

    <% if was_validated %>
      <% if time_was_invalid %>
        <% time_class << " is-invalid" %>
      <% else %>
        <% time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :time %>
    <!-- Input for time start -->
    <%= f.time_select :time, class: time_class, placeholder: "Enter time" %>
    <!-- Input for time end -->
    <% if time_was_invalid %>
      <% comment.errors.full_messages_for(:time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for time end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
