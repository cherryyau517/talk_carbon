<div class="card mb-3">
  <h2 class="card-header h4">
    Following #<%= following.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Follower</dt>
      <dd>
        <% if @following.follower.present? %>
          <%= link_to following.follower, following.follower %>
        <% end %>
      </dd>

      <dt>Followed</dt>
      <dd><%= following.followed_id %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back following, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @following.follower %>
          <%= link_to edit_following_url(following), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @following.follower %>
          <%= link_to following, method: :delete, data: { confirm: "Do you really want to delete this following?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(following.updated_at) %> ago
  </div>
</div>
