<% was_validated = activity_ranking.errors.any? %>

<%= form_with(model: activity_ranking, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = activity_ranking.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if user_was_invalid %>
      <% activity_ranking.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% activity_class = "form-control" %>
    <% activity_was_invalid = activity_ranking.errors.include?(:activity) %>

    <% if was_validated %>
      <% if activity_was_invalid %>
        <% activity_class << " is-invalid" %>
      <% else %>
        <% activity_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :activity_id %>
    <%= f.collection_select :activity_id, ActivityType.all, :id, :to_s, {}, class: "form-control" %>
    <% if activity_was_invalid %>
      <% activity_ranking.errors.full_messages_for(:activity).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% date_class = "form-control" %>
    <% date_was_invalid = activity_ranking.errors.include?(:date) %>

    <% if was_validated %>
      <% if date_was_invalid %>
        <% date_class << " is-invalid" %>
      <% else %>
        <% date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :date %>
    <%= f.date_select :date, class: date_class, placeholder: "Enter date" %>
    <% if date_was_invalid %>
      <% activity_ranking.errors.full_messages_for(:date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% carbon_amount_class = "form-control" %>
    <% carbon_amount_was_invalid = activity_ranking.errors.include?(:carbon_amount) %>

    <% if was_validated %>
      <% if carbon_amount_was_invalid %>
        <% carbon_amount_class << " is-invalid" %>
      <% else %>
        <% carbon_amount_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :carbon_amount %>
    <%= f.text_field :carbon_amount, class: carbon_amount_class, placeholder: "Enter carbon amount" %>
    <% if carbon_amount_was_invalid %>
      <% activity_ranking.errors.full_messages_for(:carbon_amount).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% month_class = "form-control" %>
    <% month_was_invalid = activity_ranking.errors.include?(:month) %>

    <% if was_validated %>
      <% if month_was_invalid %>
        <% month_class << " is-invalid" %>
      <% else %>
        <% month_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :month %>
    <%= f.number_field :month, class: month_class, placeholder: "Enter month" %>
    <% if month_was_invalid %>
      <% activity_ranking.errors.full_messages_for(:month).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
