<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Activity Rankings

    <a data-toggle="collapse" href="#user_activity_rankings_new_form">
      Add activity ranking
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.activity_rankings.each do |activity_ranking| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to activity_ranking, activity_ranking %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_activity_rankings_new_form">
        <%= render partial: "users/user_activity_rankings_new_form" %>
      </div>
    </div>

  </ul>
</div>
