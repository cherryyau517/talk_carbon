<%= form_with(model: @activities_log, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :activity_id %>

    <%= f.collection_select :activity_id, ActivityType.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>

    <%= f.date_select :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :time %>

    <%= f.date_select :time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :activity_remarks %>
    <%= f.text_area :activity_remarks, rows: "3", class: "form-control" %>
  </div>

  <div class="form-check">
    <%= f.check_box :addition, class: "form-check-input" %>
    <%= f.label :addition, class: "form-check-label" %>
  </div>

  <div class="form-group">
    <%= f.label :carbon_amount %>

    <%= f.text_field :carbon_amount, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.submit "Create activities log", class: "btn btn-block btn-outline-secondary" %>
<% end %>
