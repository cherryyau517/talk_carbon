<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Monthly Records

    <a data-toggle="collapse" href="#user_monthly_records_new_form">
      Add monthly record
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.monthly_records.each do |monthly_record| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to monthly_record, monthly_record %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_monthly_records_new_form">
        <%= render partial: "users/user_monthly_records_new_form" %>
      </div>
    </div>

  </ul>
</div>
