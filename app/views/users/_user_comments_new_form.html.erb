<%= form_with(model: @comment, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :log_id %>

    <%= f.collection_select :log_id, ActivitiesLog.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :commenter_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>

    <%= f.date_select :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :time %>

    <%= f.date_select :time, class: "form-control" %>
  </div>

  <%= f.submit "Create comment", class: "btn btn-block btn-outline-secondary" %>
<% end %>
